<div class="container-scroller">
  {{>admin-sidebar}}
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Create coupon</h4>
              <p class="card-description">
                Here is create a new coupon.
              </p>
              <p style="color: red;">{{err}}</p>
              <form class="forms-sample" action="/admin/addCoupon" method="post" id="coupon">
                <div class="form-group">
                  <label for="exampleInputUsername1">Coupon code</label>
                  <input type="text" class="form-control" id="exampleInputUsername1" placeholder="Coupon code"
                    name="code">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Percentage</label>
                  <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Percentage" name="per">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Expire date</label>
                  <input type="date" class="form-control" id="exampleInputPassword1" placeholder="month / date / year"
                    name="expiredate">
                </div>
                <div class="form-group">
                  <label for="exampleInputConfirmPassword1">Limit</label>
                  <input type="text" class="form-control" id="exampleInputConfirmPassword1" placeholder="Limit"
                    name="limit">
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>