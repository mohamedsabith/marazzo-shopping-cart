<div class="container-scroller">
  {{>admin-sidebar}}
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">ALL PRODUCTS</h4>
              <p class="card-description">
                All products<code>is here.</code>
              </p>
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>
                        User
                      </th>
                      <th>
                        Product Name
                      </th>
                      <th>
                        Quantity
                      </th>
                      <th>
                        Amount
                      </th>
                      <th>
                        Status
                      </th>
                      <th>
                        Paid
                      </th>
                      <th>
                        Payment Type
                      </th>
                      <th>
                        Date
                      </th>
                      <th>
                        Edit
                      </th>
                    </tr>
                  </thead>
                  {{#each Order}}
                  <tbody>
                    <tr>
                      <td class="py-1">
                        {{this.user}}
                      </td>
                      <td>
                        {{this.name}}
                      </td>
                      <td>
                        {{this.quantity}}
                      </td>
                      <td>
                        $ {{this.subtotal}}
                      </td>
                      <td>
                        {{this.status}}
                      </td>
                      <td>
                        {{this.paid}}
                      </td>
                      <td>
                        {{this.paymentType}}
                      </td>
                      <td>
                        {{this.created}}
                      </td>
                      <td>
                        <a href="/admin/editOrder/{{this._id}}/{{this.user}}"
                          style="text-decoration: none;  color:#0000FF;">Edit</a>
                      </td>
                    </tr>
                  </tbody>
                  {{/each}}
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer class="footer">
      <div class="d-sm-flex justify-content-center justify-content-sm-between">
        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Marazzo <a href="/" target="_blank">
            Shopping Website</a></span>
        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Copyright Â© 2021. All rights
          reserved.</span>
      </div>
    </footer>
  </div>
</div>
</div>